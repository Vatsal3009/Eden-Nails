    <!--Button Style-->
    <style name="ShapeAppearance.App.Button" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="Widget.App.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:backgroundTint">#4DF68BAB</item>
        <item name="android:letterSpacing">0</item>
    </style>



