<!-- drawable_with_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Border color -->

    <!-- Background -->
    <solid
        android:color="@color/colorBackground" /> <!-- Background color -->

    <!-- Corner radius -->
    <corners
        android:radius="10dp" /> <!-- Corner radius -->

</shape>
